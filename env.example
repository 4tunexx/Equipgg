# ===========================================
# ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values
# For production, set these in your deployment platform (Vercel, etc.)

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# For local development (SQLite with sql.js)
DATABASE_TYPE=sqlite
DATABASE_URL="file:./.data/equipgg.sqlite"

# For production (PostgreSQL - Supabase)
# DATABASE_TYPE=postgresql
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"

# For production (PostgreSQL - Neon)
# DATABASE_TYPE=postgresql
# DATABASE_URL="postgresql://[USERNAME]:[PASSWORD]@ep-[ENDPOINT].us-east-1.aws.neon.tech/neondb?sslmode=require"

# For production (PostgreSQL - Self-hosted)
# DATABASE_TYPE=postgresql
# DATABASE_URL="postgresql://username:password@localhost:5432/equipgg"

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================

# NextAuth Configuration
NEXTAUTH_SECRET="your-super-secret-key-here-minimum-32-characters"
NEXTAUTH_URL="http://localhost:9003"

# Steam OpenID Authentication
STEAM_API_KEY="your-steam-api-key-here"

# ===========================================
# SOCKET.IO CONFIGURATION
# ===========================================

# Socket.io Server URL
SOCKET_IO_URL="http://localhost:9003"

# ===========================================
# PAYMENT PROCESSING (Optional)
# ===========================================

# Stripe Configuration
STRIPE_PUBLIC_KEY="pk_test_your_stripe_public_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# PayPal Configuration
PAYPAL_CLIENT_ID="your_paypal_client_id"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret"
PAYPAL_MODE="sandbox"  # or "live" for production

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================

# SMTP Configuration for email notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@yourdomain.com"

# ===========================================
# SUPABASE CONFIGURATION (Production)
# ===========================================

# Supabase Project Configuration
NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT-REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Application Environment
NODE_ENV="development"  # or "production"

# Application URL (for production)
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"

# API Base URL
NEXT_PUBLIC_API_URL="https://your-app.vercel.app/api"

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_CHAT="true"
NEXT_PUBLIC_ENABLE_FORUMS="true"
NEXT_PUBLIC_ENABLE_BETTING="true"
NEXT_PUBLIC_ENABLE_ARCADE="true"
NEXT_PUBLIC_ENABLE_SHOP="true"

# ===========================================
# ANALYTICS & MONITORING (Optional)
# ===========================================

# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Sentry Error Tracking
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# ===========================================
# REDIS CONFIGURATION (Optional - for caching)
# ===========================================

# Redis URL for caching and sessions
REDIS_URL="redis://localhost:6379"

# ===========================================
# FILE STORAGE (Optional)
# ===========================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket"

# ===========================================
# DEVELOPMENT ONLY
# ===========================================

# Enable debug logging
DEBUG="false"

# Enable Prisma logging
PRISMA_LOG_LEVEL="info"

# ===========================================
# PRODUCTION ONLY
# ===========================================

# Enable production optimizations
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_ERROR_REPORTING="false"

# Rate limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"  # 15 minutes in milliseconds
