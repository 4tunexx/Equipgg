# Production Environment Variables for EquipGG.net
# Copy this to .env.local for local testing with production settings

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database
DIRECT_URL=postgresql://username:password@host:port/database

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Application Configuration
NEXTAUTH_URL=https://www.equipgg.net
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# Socket.io Configuration
NEXT_PUBLIC_SOCKET_URL=https://www.equipgg.net

# Security
JWT_SECRET=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# External APIs
STEAM_API_KEY=your-steam-api-key
CSGODATABASE_API_KEY=your-csgodatabase-api-key

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=your-sentry-dsn

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Storage
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=equipgg-assets

# Rate Limiting
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Development/Production Flags
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production