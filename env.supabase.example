# Supabase Production Environment Variables
# Copy this to .env.local and fill in your actual values

# Supabase Database Configuration
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Supabase API Configuration
NEXT_PUBLIC_SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.[YOUR-ANON-KEY]
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.[YOUR-SERVICE-ROLE-KEY]

# Application Configuration
NEXTAUTH_URL=https://www.equipgg.net
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXT_PUBLIC_APP_URL=https://www.equipgg.net
NEXT_PUBLIC_SOCKET_URL=https://www.equipgg.net

# Security
JWT_SECRET=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# External APIs
STEAM_API_KEY=your-steam-api-key
CSGODATABASE_API_KEY=your-csgodatabase-api-key

# Production Flags
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production

# Instructions:
# 1. Replace [YOUR-PASSWORD] with your Supabase database password
# 2. Replace [YOUR-PROJECT-REF] with your Supabase project reference
# 3. Replace [YOUR-ANON-KEY] with your Supabase anon key
# 4. Replace [YOUR-SERVICE-ROLE-KEY] with your Supabase service role key
# 5. Generate secure random strings for NEXTAUTH_SECRET, JWT_SECRET, and ENCRYPTION_KEY
